server {
    listen 80;
    server_name food-service.com;
    access_log /var/log/nginx/food-service.log;
    charset utf-8;
    location / {
        proxy_pass http://food_service:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}